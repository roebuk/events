# Database Configuration
# Copy this file to .env and update with your local values

DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=firecrest
DB_SSLMODE=disable

# Session Configuration
SESSION_SECRET=your-secret-key-change-this-in-production
SESSION_LIFETIME_HOURS=12
SESSION_LIFETIME_REMEMBER_HOURS=720  # 30 days

# Security Configuration
# Generate a secure 32-byte key with: openssl rand -base64 32 | head -c 32
CSRF_KEY=dev-key-change-in-production!!
ACCOUNT_LOCKOUT_MINUTES=15
MAX_LOGIN_ATTEMPTS=5
