# Application Environment
APP_ENV=development

# Server Configuration
SERVER_PORT=8080
SERVER_READ_TIMEOUT=5
SERVER_WRITE_TIMEOUT=10
SERVER_IDLE_TIMEOUT=120

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=firecrest
DB_SSLMODE=disable

# Session Configuration
SESSION_COOKIE_NAME=firecrest_session
SESSION_LIFETIME_HRS=12

# CSRF Protection (MUST be exactly 32 characters)
# Generate with: openssl rand -base64 24 | head -c 32
CSRF_KEY=change-this-to-32-byte-string!

# Domain Configuration (for CSRF trusted origins)
# STAGING_DOMAIN=staging.example.com
# PRODUCTION_DOMAIN=example.com

