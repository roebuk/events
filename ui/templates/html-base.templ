package templates

templ Html(title string, meta templ.Component) {
	<html lang="en-GB">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			if meta != nil {
				@meta
			}
		</head>
		<body>
			{ children... }
		</body>
	</html>
}
